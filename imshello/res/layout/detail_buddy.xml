<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#000000" >

    <LinearLayout
        android:id="@+id/contacts_linear_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/tab_background_selected" >

        <ImageView
            android:id="@+id/picture"
            android:layout_width="76dp"
            android:layout_height="fill_parent"
            android:src="@drawable/mini_avatar_shadow" />

        <LinearLayout
            android:id="@+id/contacts_inner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="name"
                android:textSize="18sp"
                android:textColor="@color/black" />
            
                        <TextView
                android:id="@+id/sex"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="boy"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/contacts_linear_layout"
        android:id="@+id/contacts_linear_layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_gravity="center_vertical" >

        <include
            android:id="@+id/item_number"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            layout="@layout/detail_buddy_item" />
        
        <ImageView 
            android:background="#000000"
            android:layout_height="1dip"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"/>

        <include
            android:id="@+id/item_category"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            layout="@layout/detail_buddy_item" />
                <ImageView 
            android:background="#000000"
            android:layout_height="1dip"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"/>

        <include
            android:id="@+id/item_sip"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            layout="@layout/detail_buddy_item" />
                <ImageView 
            android:background="#000000"
            android:layout_height="1dip"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"/>

        <include
            android:id="@+id/item_photo"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            layout="@layout/detail_buddy_item" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/contacts_linear_layout2"
        android:id="@+id/contacts_linear_layout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/tab_background_selected"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buddy_detail_audio_call"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/green_color"
            android:text="音频通话"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buddy_detail_video_call"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/green_color"
            android:text="视频通话"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buddy_detail_message"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/white"
            android:text="发消息"
            android:textColor="@color/black" />
    </LinearLayout>

</RelativeLayout>