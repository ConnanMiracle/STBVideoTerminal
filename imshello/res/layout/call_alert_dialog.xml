        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
  
        <TextView
            style="@style/DialogText"
            android:id="@+id/call_alert_dialog_message"
            android:padding="5dip"
            android:text="请选择"
 
            android:layout_width="fill_parent"
