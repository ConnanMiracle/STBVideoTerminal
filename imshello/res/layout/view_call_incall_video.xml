<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <FrameLayout
        android:id="@+id/view_call_incall_video_FrameLayout_remote_video"
        android:layout_width="fill_parent"
        android:layout_height="450dip"
        android:layout_alignBottom="@+id/frameLayout1"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|right"
        android:background="@color/color_black"
        android:clickable="true"
        android:gravity="bottom|right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/view_call_incall_video_imageView_secure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3px"
            android:src="@drawable/secure_16" >
        </ImageView>

    </FrameLayout>
            
        <ImageButton 
            android:id="@+id/view_call_incall_video_imageBtn_SwitchCamera"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
			android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/camera"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"/>
    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:background="@drawable/grad_whiterounded"
        android:minHeight="90dp"
        android:minWidth="90dp"
        android:padding="4dp"
        android:visibility="invisible" >

        <FrameLayout
            android:id="@+id/view_call_incall_video_FrameLayout_local_video"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" >
        </FrameLayout>
    </FrameLayout>

    <ImageButton
        android:id="@+id/view_call_incall_video_imageButton_hang"
        android:layout_width="220dip"
        android:layout_height="47dip"
        android:layout_alignBottom="@+id/frameLayout1"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/frameLayout1"
        android:alpha="0.8"
        android:background="@drawable/selectorend1"
        android:visibility="gone" />

</RelativeLayout>